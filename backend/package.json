{
  "name": "library-management-system-backend",
  "version": "1.0.0",
  "description": "Library Management System Backend",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test-env": "cross-env NODE_ENV=test nodemon server.js",
    "init-db": "node utils/init-db.js",
    "init-db:dev": "cross-env NODE_ENV=development node utils/init-db.js",
    "init-db:test": "cross-env NODE_ENV=test node utils/init-db.js",
    "init-db:prod": "cross-env NODE_ENV=production node utils/init-db.js",
    "migrate": "node utils/db-migration.js",
    "migrate:dev": "cross-env NODE_ENV=development node utils/db-migration.js",
    "migrate:test": "cross-env NODE_ENV=test node utils/db-migration.js",
    "migrate:prod": "cross-env NODE_ENV=production node utils/db-migration.js",
    "validate-schema": "node utils/schema-validation.js",
    "validate-schema:dev": "cross-env NODE_ENV=development node utils/schema-validation.js",
    "validate-schema:test": "cross-env NODE_ENV=test node utils/schema-validation.js",
    "validate-schema:prod": "cross-env NODE_ENV=production node utils/schema-validation.js",
    "test-email": "cross-env NODE_ENV=development node utils/test-email.js",
    "init-reminder-templates": "cross-env NODE_ENV=development node utils/init-reminder-templates.js",
    "init-reminder-templates:prod": "cross-env NODE_ENV=production node utils/init-reminder-templates.js",
    "init-settings": "cross-env NODE_ENV=development node utils/init-settings.js",
    "init-settings:prod": "cross-env NODE_ENV=production node utils/init-settings.js",
    "generate-fines": "cross-env NODE_ENV=development node -e \"require('./utils/scheduledTasks').generateOverdueFinesTask()\"",
    "generate-fines:prod": "cross-env NODE_ENV=production node -e \"require('./utils/scheduledTasks').generateOverdueFinesTask()\"",
    "process-due-reminders": "cross-env NODE_ENV=development node -e \"require('./utils/scheduledTasks').processDueDateRemindersTask()\"",
    "process-due-reminders:prod": "cross-env NODE_ENV=production node -e \"require('./utils/scheduledTasks').processDueDateRemindersTask()\"",
    "process-overdue-reminders": "cross-env NODE_ENV=development node -e \"require('./utils/scheduledTasks').processOverdueRemindersTask()\"",
    "process-overdue-reminders:prod": "cross-env NODE_ENV=production node -e \"require('./utils/scheduledTasks').processOverdueRemindersTask()\"",
    "seed-categories": "cross-env NODE_ENV=development node utils/seed-categories.js",
    "seed-items": "cross-env NODE_ENV=development node utils/seed-sample-items.js",
    "seed-permissions": "cross-env NODE_ENV=development node utils/seed-permissions.js",
    "seed-all": "npm run seed-categories && npm run seed-items && npm run seed-permissions",
    "test-server": "node test-server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10"
  }
}
